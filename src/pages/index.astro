---
import AppLayout from "@layouts/AppLayout.astro";
import { Image } from "astro:assets";
import authorImage from "../assets/me.png";
import technologies from "@data/technologies.json";
import Skill from "@components/Skill.astro";
import { author } from "@data/socials";
---

<AppLayout title="Vishesh Gubrani - Junior Software Developer & DevOps Enthusiast">
  <header class="sm:flex sm:items-center sm:justify-between">
    <div class="rounded aspect-square w-40 overflow-hidden inline-flex drop-shadow-none lg:drop-shadow-[0px_0px_35px_rgba(83,70,250,0.90)]">
      <Image
        src={authorImage}
        alt="Image of the author"
        loading="eager"
        width={320}
        height={320}
      />
    </div>
    <div class="mt-8 max-w-lg 2xl:max-w-xl sm:my-0 sm:order-first">
      <h1
        class="mb-2 text-3xl font-bold tracking-tight dark:text-white text-zinc-900 sm:text-4xl"
      >
        {author}
      </h1>
      <p class="mb-4 dark:text-zinc-300 text-zinc-700 flex items-center">
        Devops/Cloud Engineer from India <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 51.18 38.4" class="inline-block w-6 h-6 ml-2">
          <path d="M17.75 0v12.8H3.03C1.37 12.8 0 11.44 0 9.77V3.03C0 1.36 1.37 0 3.03 0h14.72z M37.45 0v12.8h-19.7V0h19.7z M37.45 12.8V0h14.72c1.67 0 3.03 1.36 3.03 3.03v6.74c0 1.67-1.37 3.03-3.03 3.03H37.45v.01z" fill="#FF9933"/>
          <path d="M17.75 12.8v12.8H3.03C1.37 25.6 0 24.24 0 22.57v-6.74c0-1.67 1.37-3.03 3.03-3.03h14.72z M37.45 12.8v12.8h-19.7V12.8h19.7z M37.45 25.6V12.8h14.72c1.67 0 3.03 1.36 3.03 3.03v6.74c0 1.67-1.37 3.03-3.03 3.03H37.45v.01z" fill="#FFFFFF"/>
          <path d="M17.75 25.6v12.8H3.03C1.37 38.4 0 37.04 0 35.37v-6.74c0-1.67 1.37-3.03 3.03-3.03h14.72z M37.45 25.6v12.8h-19.7V25.6h19.7z M37.45 38.4V25.6h14.72c1.67 0 3.03 1.36 3.03 3.03v6.74c0 1.67-1.37 3.03-3.03 3.03H37.45v.01z" fill="#138808"/>
          <circle cx="25.59" cy="19.2" r="4" fill="#000080"/>
          <circle cx="25.59" cy="19.2" r="3.8" fill="#FFFFFF"/>
          <path d="M25.59 16.2L26.09 19.2L25.59 22.2L25.09 19.2Z M22.59 19.2L25.59 18.7L28.59 19.2L25.59 19.7Z" fill="#000080"/>
          </svg>
        
      </p>
      <p
        class="max-w-prose font-normal text-sm md:text-lg dark:text-zinc-400 text-zinc-600 sm:max-w-sm md:max-w-xl leading-relaxed"
      >
        I am a developer who loves to build things for the web. I
        have been coding for 3 years now and I am always looking to learn new
        things. I am currently working on a few projects, but I am always open
        to new opportunities.
      </p>
    </div>
  </header>
  <section class="mt-10 sm:mt-28" aria-labelledby="section-title">
    <h2
      class="dark:text-zinc-300 text-zinc-700 mb-4 text-2xl font-bold tracking-tight"
      id="section-title"
    >
      About Me
    </h2>
    <p
      class="max-w-prose mb-8 font-normal text-sm md:text-lg dark:text-zinc-400 text-zinc-600 leading-relaxed"
    >
      Here are some of the technologies I have been working with:
    </p>
    <ul>
      {Object.entries(technologies).map(([category, techList]) => (
        <li class="flex flex-col mb-8 last:mb-0" key={category} id={category}>
          <h3 class="dark:text-zinc-300 text-zinc-700 mb-4 text-lg font-semibold tracking-tight">
            {category}
          </h3>
          <ul class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-3">
            {techList.map((tech, index) => (
              <Skill key={index} {...tech} />
            ))}
          </ul>
        </li>
      ))}
    </ul>
  </section>
</AppLayout>
